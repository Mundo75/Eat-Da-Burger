<div class="container">

    <div class="row">

        <div class="col-sm-12">

            <img src="/assets/image/untitled.png" alt="burger pic">

            <h1>Eat-Da-Burger!</h1>

        </div>

    </div>

    <div class="row">

        <div class="col-lg-4 col-lg-offset-2 col-md-5 col-md-offset-1 col-sm-6">

            {{#each burgers}}
            {{#unless devoured}}

            <div class="well well-sm well-burger">

                <p class="h2">{{id}}. {{burger_Name}}</p>

                <button class="btn btn-danger btn-devour pull-right" data-id="{{id}}">Devour!</button>

            </div>

            {{/unless}}
            {{/each}}

        </div>

        <div class="col-lg-4 col-md-5 col-sm-6">

            {{#each burgers}}
            {{#if devoured}}

            <div class="well well-sm well-burger" id="burgerMenu">

                <p class="h2">{{id}}. {{burger_Name}}</p>

            </div>

            {{/if}}
            {{/each}}

        </div>

    </div>

    <div class="row">

        <div class="col-lg-4 col-lg-offset-4 col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 col-xs-10 col-xs-offset-1">

            <form class="gameForm">

                <div class="burgerForm">

                    <input id="burgerType" type="text" class="form-control" placeholder="Type Burger Here!" aria-describedby="helpBlock">

                    <span id="helpBlock" class="help-block" style="display:none;">Please enter a burger</span>

                </div>

                <button type="submit" class="btn btn-success"><strong>Add Yer Favorite Burger!</strong></button>

                <p id="buttonText">Type in the name of the burger you want to devour and click the button</p>

            </form>

        </div>

    </div>

</div>